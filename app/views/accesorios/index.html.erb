<h1>Listar Mis Accesorios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Imagen</th>
      <th>Costo</th>
      <th>Disponibilidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accesorios.each do |accesorio| %>
      <tr>
        <td><%= accesorio.name %></td>
        <td><%= accesorio.description %></td>
        <td><%= accesorio.picture %></td>
        <td><%= accesorio.cost %></td>
        <td><%= accesorio.availability %></td>
        <td><%= link_to 'Show', accesorio %></td>
        <td><%= link_to 'Edit', edit_accesorio_path(accesorio) %></td>
        <td><%= link_to 'Destroy', accesorio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accesorio', new_accesorio_path %>
